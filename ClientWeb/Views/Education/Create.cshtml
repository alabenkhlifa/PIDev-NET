@model Domain.Education

@{
    ViewBag.Title = "Education";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <center>
        <div class="form-horizontal">
            <h4>Education</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="from">From</label>
                <div class="col-md-4">
                    <input type="text" class="form-control input-md"  data-min-length="10" data-inputmask="'alias': 'yyyy/mm/dd'" placeholder="yyyy/mm/dd" data-mask=""  name="from">                
                </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="to">To</label>
                <div class="col-md-4">
                    <input type="text" class="form-control input-md" data-min-length="10" data-inputmask="'alias': 'yyyy/mm/dd'" placeholder="yyyy/mm/dd" data-mask="" name="to">                
                </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="title">Title</label>
                <div class="col-md-4">
                    <input id="title" name="title" placeholder="Title" class="form-control input-md" required="" type="text">
                </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="organisation.name">School Name</label>
                <div class="col-md-4">
                    <input id="organisation.name" name="organisation.name" placeholder="School Name" class="form-control input-md" required="" type="text">
                </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="organisation.city">School City</label>
                <div class="col-md-4">
                    <input id="organisation.city" name="organisation.city" placeholder="School City" class="form-control input-md" required="" type="text">
                </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="organisation.country">School Country</label>
                <div class="col-md-4">
                    <input id="organisation.country" name="organisation.country" placeholder="School Country" class="form-control input-md" required="" type="text">
                </div>
            </div>
            <button type="submit" class="btn btn-default">Add Education</button>
        </div>
    </center>
}

