@model Domain.Experience

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <center>
        <div class="form-horizontal">
            <h4>Experiences</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="from">From</label>
                <div class="col-md-4">
                    <input type="text" class="form-control input-md" data-min-length="10" data-inputmask="'alias': 'yyyy/mm/dd'" placeholder="yyyy/mm/dd" data-mask="" name="from">
                </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="to">To</label>
                <div class="col-md-4">
                    <input type="text" class="form-control input-md" data-min-length="10" data-inputmask="'alias': 'yyyy/mm/dd'" placeholder="yyyy/mm/dd" data-mask="" name="to">
                </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="poste">Poste</label>
                <div class="col-md-4">
                    <input name="poste" placeholder="Poste" class="form-control input-md" required="" type="text">
                </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="company">Company</label>
                <div class="col-md-4">
                    <input name="company" placeholder="Company" class="form-control input-md" required="" type="text">
                </div>
            </div>

            <button type="submit" class="btn btn-default">Add Experience</button>
        </div>
    </center>
}
